<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="eeea.eeeaapp.notes"
    android:background="@mipmap/back">
    
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/classnotes"
        android:clickable="true"
        android:fadeScrollbars="true"
        android:contextClickable="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/linearlayout1">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/linearlayout1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <Button
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:id="@+id/mag"
            android:background="@mipmap/mag"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_width="50dp" />

        <Button
            android:id="@+id/home"
            android:background="@mipmap/ic_home_black_24dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="70dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:id="@+id/notification"
            android:background="@mipmap/ic_notifications_active_black_24dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/home"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:id="@+id/user"
            android:background="@mipmap/ic_account_circle_black_24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            />
    </LinearLayout>

</RelativeLayout>
