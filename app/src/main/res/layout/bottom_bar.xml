<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="450dp"
        android:id="@+id/nav_menu">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:id="@+id/user"
            android:background="@mipmap/ic_account_circle_black_24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="325dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:id="@+id/notification"
            android:background="@mipmap/idea"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/user"
            android:layout_marginLeft="85dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:id="@+id/search"
            android:background="@mipmap/ic_search_black_24dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/home"
            android:layout_marginLeft="250dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:id="@+id/mag"
            android:background="@mipmap/mag"
            android:layout_marginStart="19dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/home"
            android:background="@mipmap/ic_home_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="150dp" />
    </FrameLayout>

</LinearLayout>